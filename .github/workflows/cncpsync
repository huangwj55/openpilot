name: Sync and Modify Openpilot Values.py

on:
  schedule:
    - cron: '0 0 * * *'  # 每天零点运行一次，你可以根据需要修改
  workflow_dispatch:  # 允许手动触发 workflow

jobs:
  sync_and_modify:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3
        with:
          ref: cncp  # 检出你的 cncp 分支

      - name: Configure Git
        run: |
          git config --global user.email "actions@github.com"
          git config --global user.name "GitHub Actions"

      - name: Add Upstream Repository
        run: |
          git remote add upstream https://github.com/jixiexiaoge/openpilot.git

      - name: Fetch Upstream Changes
        run: |
          git fetch upstream cncp

      - name: Merge Upstream Changes
        run: |
          git merge upstream/cncp

      - name: Modify values.py
        run: |
          echo "" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "if __name__ == \"__main__\":" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "  cars = []" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "  for platform in CAR:" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "    for doc in platform.config.car_docs:" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "      cars.append(doc.name)" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "  cars.sort()" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "  for c in cars:" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py
          echo "    print(c)" >> openpilot/opendbc_repo/opendbc/car/toyota/values.py

      - name: Commit and Push Changes
        run: |
          git add openpilot/opendbc_repo/opendbc/car/toyota/values.py
          git commit -m "Sync with jixiexiaoge/openpilot cncp and modify values.py"
          git push origin cncp
